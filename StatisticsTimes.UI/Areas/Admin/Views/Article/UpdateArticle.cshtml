
@{
    ViewBag.Title = "UpdateArticle";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayoutPage.cshtml";
}

@model StatisticsTimes.UI.Areas.Admin.Models.VM.ArticleVM

<div class="content-wrapper" style="min-height: 946px;">
    <!-- Content Header (Page header) -->
    <section class="content-header">

        <ol class="breadcrumb">
            <li><a href="/Admin/Home/AdminHomeIndex"><i class="fa fa-home"></i> Home</a></li>
            <li><a href="/Admin/Article/ArticleAdd">Add Article</a></li>
            <li><a href="/Admin/Article/ArticleList">Article List</a></li>
            <li class="active">Update Article</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- left column -->
            <div class="col-md-6">
                <!-- general form elements -->
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Article Update</h3>
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    <form action="/Admin/Article/UpdateArticle" method="post" enctype="multipart/form-data" role="form">
                        <div class="box-body">
                            <div class="form-group">
                                <label for="CategoryID">Choose Category</label>
                                <select class="form-group" name="CategoryID">
                                    @foreach (var item in Model.Categories)
                                    {
                                        <option class="form-control" value="@item.ID">@item.CategoryName</option>
                                    }
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="AppUserID">Choose AppUser</label>
                                <select class="form-group" name="AppUserID">
                                    @foreach (var item in Model.AppUsers)
                                    {
                                        <option class="form-control" value="@item.ID">@item.FirstName @item.LastName</option>
                                    }
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="text">Header</label>
                                <input type="text" class="form-control" name="Header" value="@Model.Articles.Header" placeholder="Header" />
                            </div>
                            <div class="form-group">
                                <label for="text">Content</label>
                                <input type="text" class="form-control" name="Content" value="@Model.Articles.Content" placeholder="Content" />
                            </div>
                            <div class="form-group">
                                <label for="text">SubTitle</label>
                                <input type="text" class="form-control" name="SubTitle" value="@Model.Articles.SubTitle" />
                            </div>
                            <div class="form-group">
                                <label for="DateTime">Publish Date</label>
                                <input type="date" class="form-control" name="PublishDate" value="@Model.Articles.PublishDate" placeholder="PublishDate" />
                            </div>
                            <div class="form-group">
                                <label for="Image">Image</label>
                                <input type="file" name="Image" value="@Model.Articles.ImagePath" class="form-group"/>
                            </div>

                        </div>
                        <!-- /.box-body -->
                        <input type="text" style="visibility:hidden" name="ID" value="@Model.Articles.ID" />
                        <div class="box-footer">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </form>
                </div>

            </div>

        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>

