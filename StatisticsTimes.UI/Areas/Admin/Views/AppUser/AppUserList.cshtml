
@{
    ViewBag.Title = "AppUserList";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayoutPage.cshtml";
}

@model List<StatisticsTimes.Model.Option.AppUser>

<link href="~/Contents/css/bootstrap.min.css" rel="stylesheet" />
<script src="~/Contents/script/jquery.dataTables.min.js"></script>
<script src="~/Contents/script/dataTables.bootstrap.min.js"></script>
<section class="content-header">
    <ol class="breadcrumb">
        <li><a href="/Admin/Home/AdminHomeIndex"><i class="fa fa-home"></i> Home</a></li>
        <li><a href="/Admin/AppUser/AppUserAdd">Add AppUser</a></li>
        <li class="active">AppUser List</li>
    </ol>
</section>
<br />
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">List of AppUsers</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="example2" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>First Name</th>
                                <th>Last Name</th>
                                <th>User Name</th>
                                <th>Password</th>
                                <th>E-Mail</th>
                                <th>Address</th>
                                <th>PhoneNumber</th>
                                <th>Role</th>
                                <th>Image</th>
                                <th>Update</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.FirstName</td>
                                    <td>@item.LastName</td>
                                    <td>@item.UserName</td>
                                    <td>@item.Password</td>
                                    <td>@item.Email</td>
                                    <td>@item.Adress</td>
                                    <td>@item.PhoneNumber</td>
                                    <td>@item.Role</td>
                                    <td><img src="@item.XSmallUserImage"/></td>

                                    <td><a href="/Admin/AppUser/UpdateAppUser/@item.ID" type="button" class="btn btn-block btn-warning">Update</a></td>
                                    <td><a href="/Admin/AppUser/Delete/@item.ID" type="button" class="btn btn-block btn-danger">Delete</a></td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
<script>
    $(function () {
        $('#example1').DataTable()
        $('#example2').DataTable({
            'paging': true,
            'lengthChange': false,
            'searching': false,
            'ordering': true,
            'info': true,
            'autoWidth': false
        })
    })
</script>




