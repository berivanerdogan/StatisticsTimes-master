
@{
    ViewBag.Title = "MemberHomeIndex";
    Layout = "~/Areas/Member/Views/Shared/MemberLayoutPage.cshtml";
}

@model IEnumerable<StatisticsTimes.Model.Option.Article>

<section class="content">
    <div class="row">
        <!-- /.col -->
        <div class="col-md-8">
            <!-- Box Comment -->
            @foreach (var item in Model)
            {
                <div class="box box-widget">
                    <div class="box-header with-border">
                        <div class="user-block">
                            <img class="img-circle" src="@item.AppUser.UserImage" alt="User Image">
                            <span class="username"><a href="#">@item.AppUser.FirstName @item.AppUser.LastName</a></span>
                            <span class="description"> @item.Header-@item.CreatedDate.ToString() PM Today</span>
                        </div>
                        <div class="box-tools">


                        </div>>
                    </div>
                    <div class="box-content">
                        @if (item.Content.Length >= 300)
                        {
                            @item.Content.Substring(0, 300);
                            <span><a href="/Member/Comment/Show/@item.ID">Read More...</a></span>
                        }
                        else
                        {
                            @item.Content;
                            <span><a href="/Member/Comment/Show/@item.ID">Read More...</a></span>
                        }
                    </div>
                </div>

            }
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
</section>