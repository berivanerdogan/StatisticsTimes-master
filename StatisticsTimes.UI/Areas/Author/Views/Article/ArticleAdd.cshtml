
@{
    ViewBag.Title = "ArticleAdd";
    Layout = "~/Areas/Author/Views/Shared/AuthorLayoutPage.cshtml";
}

@model List<StatisticsTimes.Model.Option.Category>


<div class="content-wrapper" style="min-height: 946px;">
    <!-- Content Header (Page header) -->
    <section class="content-header">

        <ol class="breadcrumb">
            <li><a href="/Author/Home/AuthorHomeIndex"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="/Author/Article/ArticleList">Forms</a></li>
            <li class="active">Article Add</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- left column -->
            <div class="col-md-6">
                <!-- general form elements -->
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Article Add</h3>
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    <form action="/Author/Article/ArticleAdd" method="post" enctype="multipart/form-data" role="form">
                        <div class="box-body">

                            <div class="form-group">
                                <label for="CategoryID">Choose Category</label>
                                <select class="form-control" name="CategoryID">
                                    @foreach (var item in Model)
                                    {
                                        <option value="@item.ID">@item.CategoryName</option>
                                    }

                                </select>
                            </div>

                            <div class="form-group">
                                <label for="text">Header</label>
                                <input type="text" class="form-control" name="Header" placeholder="Header" />
                            </div>

                            <div class="form-group">
                                <label for="text">SubTitle</label>
                                <input type="text" class="form-control" name="Subtitle" placeholder="Subtitle" />
                            </div>

                            <div class="form-group">
                                <label for="text">Content</label>
                                <input type="text" class="form-control" name="Content" placeholder="Content" />
                            </div>

                            <div class="form-group">
                                <label for="date">PublishDate</label>
                                <input type="date" class="form-control" name="PublishDate" placeholder="PublishDate" />
                            </div>
                            <div class="form-group">
                                <label for="Image">Image</label>
                                <input type="file" name="Image" value="" class="form-control" />
                            </div>
                        </div>
                        <!-- /.box-body -->

                        <div class="box-footer">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </form>
                </div>

            </div>

        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>